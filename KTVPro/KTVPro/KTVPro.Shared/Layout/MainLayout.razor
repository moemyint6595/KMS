@code{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("CommonJSFunctions.SetMainPageHeight");
            }
            catch (Exception ex)
            {
                ComFn.JSConsole("Exception", ex);
            }
        }
    }
}
